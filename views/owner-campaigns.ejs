<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Campaigns - Crowdfunding Platform</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: #f8f9fa;
    }
    .dashboard-container {
      display: flex;
      min-height: 100vh;
    }
    .sidebar {
      width: 260px;
      background: linear-gradient(180deg, #f59e0b 0%, #d97706 100%);
      color: white;
      padding: 30px 0;
      position: fixed;
      height: 100vh;
      overflow-y: auto;
    }
    .sidebar-brand {
      padding: 0 25px 30px;
      border-bottom: 1px solid rgba(255,255,255,0.2);
      margin-bottom: 20px;
    }
    .sidebar-brand h4 {
      font-weight: 700;
      margin: 0;
    }
    .sidebar-menu {
      list-style: none;
      padding: 0;
    }
    .sidebar-menu li {
      margin: 5px 0;
    }
    .sidebar-menu a {
      display: flex;
      align-items: center;
      padding: 15px 25px;
      color: rgba(255,255,255,0.9);
      text-decoration: none;
      transition: all 0.3s;
    }
    .sidebar-menu a:hover, .sidebar-menu a.active {
      background: rgba(255,255,255,0.15);
      color: white;
    }
    .sidebar-menu i {
      width: 25px;
      margin-right: 12px;
      font-size: 18px;
    }
    .main-content {
      flex: 1;
      margin-left: 260px;
      padding: 30px;
    }
    .page-header {
      margin-bottom: 30px;
    }
    .page-header h2 {
      font-size: 32px;
      font-weight: 700;
      color: #1f2937;
      margin-bottom: 10px;
    }
    .filters-section {
      background: white;
      padding: 20px;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.08);
      margin-bottom: 25px;
      display: flex;
      gap: 15px;
      flex-wrap: wrap;
      align-items: center;
    }
    .filter-group {
      flex: 1;
      min-width: 200px;
    }
    .filter-group label {
      display: block;
      font-size: 13px;
      font-weight: 600;
      color: #6b7280;
      margin-bottom: 8px;
    }
    .filter-group select {
      width: 100%;
      padding: 10px 15px;
      border: 2px solid #e5e7eb;
      border-radius: 8px;
      font-size: 14px;
      cursor: pointer;
    }
    .campaigns-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
      gap: 25px;
    }
    .campaign-card {
      background: white;
      border-radius: 12px;
      overflow: hidden;
      box-shadow: 0 2px 8px rgba(0,0,0,0.08);
      transition: all 0.3s;
      border: 1px solid #e5e7eb;
    }
    .campaign-card:hover {
      box-shadow: 0 8px 20px rgba(0,0,0,0.12);
      transform: translateY(-3px);
    }
    .campaign-image {
      width: 100%;
      height: 200px;
      background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-size: 56px;
      position: relative;
    }
    .status-badge {
      position: absolute;
      top: 15px;
      right: 15px;
      padding: 6px 14px;
      border-radius: 20px;
      font-size: 12px;
      font-weight: 600;
    }
    .status-active {
      background: #d1fae5;
      color: #065f46;
    }
    .status-draft {
      background: #fef3c7;
      color: #92400e;
    }
    .status-closed {
      background: #fee2e2;
      color: #991b1b;
    }
    .campaign-body {
      padding: 20px;
    }
    .campaign-title {
      font-size: 20px;
      font-weight: 700;
      color: #1f2937;
      margin-bottom: 8px;
    }
    .campaign-category {
      display: inline-block;
      padding: 5px 12px;
      background: #e0f2fe;
      color: #0369a1;
      border-radius: 15px;
      font-size: 12px;
      font-weight: 600;
      margin-bottom: 15px;
    }
    .funding-stats {
      margin-bottom: 15px;
    }
    .funding-amount {
      display: flex;
      justify-content: space-between;
      margin-bottom: 8px;
      font-size: 14px;
    }
    .funding-amount .raised {
      font-weight: 700;
      color: #10b981;
    }
    .funding-amount .goal {
      color: #6b7280;
    }
    .progress {
      height: 8px;
      border-radius: 10px;
      background: #e5e7eb;
    }
    .progress-bar {
      background: linear-gradient(90deg, #f59e0b 0%, #d97706 100%);
      border-radius: 10px;
    }
    .campaign-actions {
      display: flex;
      gap: 8px;
      padding-top: 15px;
      border-top: 1px solid #e5e7eb;
    }
    .action-btn {
      flex: 1;
      padding: 10px;
      border: none;
      border-radius: 8px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s;
      font-size: 13px;
    }
    .btn-view {
      background: #3b82f6;
      color: white;
    }
    .btn-view:hover {
      background: #2563eb;
    }
    .btn-edit {
      background: #10b981;
      color: white;
    }
    .btn-edit:hover {
      background: #059669;
    }
    .btn-delete {
      background: #ef4444;
      color: white;
    }
    .btn-delete:hover {
      background: #dc2626;
    }
    .empty-state {
      text-align: center;
      padding: 100px 20px;
      background: white;
      border-radius: 12px;
      color: #9ca3af;
    }
    .empty-state i {
      font-size: 100px;
      margin-bottom: 30px;
      opacity: 0.4;
    }
    .empty-state h4 {
      color: #4b5563;
      margin-bottom: 15px;
    }
    .btn-create {
      display: inline-block;
      padding: 12px 30px;
      background: #f59e0b;
      color: white;
      text-decoration: none;
      border-radius: 8px;
      font-weight: 600;
      transition: all 0.3s;
    }
    .btn-create:hover {
      background: #d97706;
      color: white;
    }
    @media (max-width: 768px) {
      .sidebar {
        width: 70px;
      }
      .sidebar-brand h4, .sidebar-menu span {
        display: none;
      }
      .main-content {
        margin-left: 70px;
      }
      .campaigns-grid {
        grid-template-columns: 1fr;
      }
    }
  </style>
</head>
<body>
  <div class="dashboard-container">
    <aside class="sidebar">
      <div class="sidebar-brand">
        <h4><i class="fas fa-rocket me-2"></i><span>CrowdFund</span></h4>
      </div>
      <ul class="sidebar-menu">
        <li><a href="/owner/dashboard"><i class="fas fa-th-large"></i><span>Dashboard</span></a></li>
        <li><a href="/owner/campaigns" class="active"><i class="fas fa-bullhorn"></i><span>My Campaigns</span></a></li>
        <li><a href="/owner/create-campaign"><i class="fas fa-plus-circle"></i><span>Create Campaign</span></a></li>
        <li><a href="/owner/messages"><i class="fas fa-comments"></i><span>Messages</span></a></li>
        <li><a href="/owner/analytics"><i class="fas fa-chart-line"></i><span>Analytics</span></a></li>
        <li><a href="/owner/profile"><i class="fas fa-user"></i><span>Profile</span></a></li>
        <li><a href="#" id="logoutBtn"><i class="fas fa-sign-out-alt"></i><span>Logout</span></a></li>
      </ul>
    </aside>

    <main class="main-content">
      <div class="page-header">
        <h2><i class="fas fa-bullhorn me-2"></i>My Campaigns</h2>
        <p style="color: #6b7280;">Manage all your crowdfunding campaigns</p>
      </div>

      <div class="filters-section">
        <div class="filter-group">
          <label>Filter by Status</label>
          <select id="statusFilter" onchange="applyFilters()">
            <option value="all">All Campaigns</option>
            <option value="active">Active</option>
            <option value="draft">Draft</option>
            <option value="closed">Closed</option>
          </select>
        </div>
        <div class="filter-group">
          <label>Sort By</label>
          <select id="sortFilter" onchange="applyFilters()">
            <option value="newest">Newest First</option>
            <option value="oldest">Oldest First</option>
            <option value="most-funded">Most Funded</option>
          </select>
        </div>
      </div>

      <div class="campaigns-grid" id="campaignsContainer">
        <div class="empty-state">
          <i class="fas fa-spinner fa-spin"></i>
          <p>Loading campaigns...</p>
        </div>
      </div>
    </main>
  </div>

  <script>
    const token = localStorage.getItem('token');
    if (!token) {
      window.location.href = '/login';
    }

    function parseJwt(token) {
      try {
        return JSON.parse(atob(token.split('.')[1]));
      } catch (e) {
        return null;
      }
    }

    const userInfo = parseJwt(token);

    document.getElementById('logoutBtn').addEventListener('click', (e) => {
      e.preventDefault();
      localStorage.removeItem('token');
      localStorage.removeItem('user');
      window.location.href = '/login';
    });

    function getCategoryIcon(category) {
      const icons = {
        'Technology': 'fa-laptop-code',
        'Education': 'fa-graduation-cap',
        'Finance': 'fa-chart-line',
        'Healthcare': 'fa-heartbeat',
        'E-commerce': 'fa-shopping-cart',
        'Other': 'fa-lightbulb'
      };
      return icons[category] || 'fa-lightbulb';
    }

    let allCampaigns = [];

    async function loadCampaigns() {
      if (!userInfo || !userInfo.userId) return;

      const container = document.getElementById('campaignsContainer');
      container.innerHTML = '<div class="empty-state"><i class="fas fa-spinner fa-spin"></i><p>Loading campaigns...</p></div>';

      try {
        const response = await fetch(`/api/owner/campaigns/${userInfo.userId}`, {
          headers: { 'Authorization': `Bearer ${token}` }
        });
        const data = await response.json();

        if (data.success && data.campaigns.length > 0) {
          allCampaigns = data.campaigns;
          applyFilters();
        } else {
          container.innerHTML = `
            <div class="empty-state">
              <i class="fas fa-bullhorn"></i>
              <h4>No campaigns yet</h4>
              <p>Create your first campaign to start raising funds for your startup.</p>
              <a href="/owner/create-campaign" class="btn-create">
                <i class="fas fa-plus me-2"></i>Create Your First Campaign
              </a>
            </div>
          `;
        }
      } catch (error) {
        console.error('Error loading campaigns:', error);
        container.innerHTML = `
          <div class="empty-state">
            <i class="fas fa-exclamation-circle"></i>
            <h4>Error Loading Campaigns</h4>
            <p>Failed to load your campaigns. Please try again.</p>
          </div>
        `;
      }
    }

    function applyFilters() {
      const statusFilter = document.getElementById('statusFilter').value;
      const sortFilter = document.getElementById('sortFilter').value;
      const container = document.getElementById('campaignsContainer');

      let filtered = [...allCampaigns];

      // Filter by status
      if (statusFilter !== 'all') {
        filtered = filtered.filter(c => c.status === statusFilter);
      }

      // Sort
      if (sortFilter === 'newest') {
        filtered.sort((a, b) => new Date(b.createdAt) - new Date(a.createdAt));
      } else if (sortFilter === 'oldest') {
        filtered.sort((a, b) => new Date(a.createdAt) - new Date(b.createdAt));
      } else if (sortFilter === 'most-funded') {
        filtered.sort((a, b) => b.currentFunding - a.currentFunding);
      }

      if (filtered.length === 0) {
        container.innerHTML = `
          <div class="empty-state">
            <i class="fas fa-inbox"></i>
            <h4>No campaigns found</h4>
            <p>Try adjusting your filters</p>
          </div>
        `;
        return;
      }

      container.innerHTML = filtered.map(campaign => {
        const progress = (campaign.currentFunding / campaign.fundingGoal) * 100;
        const icon = getCategoryIcon(campaign.category);
        const statusClass = campaign.status === 'active' ? 'status-active' : 
                           campaign.status === 'draft' ? 'status-draft' : 'status-closed';
        return `
          <div class="campaign-card">
            <div class="campaign-image">
              <i class="fas ${icon}"></i>
              <span class="status-badge ${statusClass}">${campaign.status.toUpperCase()}</span>
            </div>
            <div class="campaign-body">
              <div class="campaign-title">${campaign.projectName}</div>
              <span class="campaign-category">${campaign.category}</span>
              <div class="funding-stats">
                <div class="funding-amount">
                  <span class="raised">$${campaign.currentFunding.toLocaleString()}</span>
                  <span class="goal">of $${campaign.fundingGoal.toLocaleString()}</span>
                </div>
                <div class="progress">
                  <div class="progress-bar" style="width: ${Math.min(progress, 100)}%"></div>
                </div>
              </div>
              <div class="campaign-actions">
                <button class="action-btn btn-view" onclick="viewCampaign('${campaign._id}')">
                  <i class="fas fa-eye me-1"></i>View
                </button>
                <button class="action-btn btn-edit" onclick="editCampaign('${campaign._id}')">
                  <i class="fas fa-edit me-1"></i>Edit
                </button>
                <button class="action-btn btn-delete" onclick="deleteCampaign('${campaign._id}')">
                  <i class="fas fa-trash me-1"></i>Delete
                </button>
              </div>
            </div>
          </div>
        `;
      }).join('');
    }

    function viewCampaign(id) {
      alert('Campaign details page coming soon! Campaign ID: ' + id);
    }

    function editCampaign(id) {
      alert('Edit campaign page coming soon! Campaign ID: ' + id);
    }

    async function deleteCampaign(id) {
      if (!confirm('Are you sure you want to delete this campaign? This action cannot be undone.')) return;

      try {
        const response = await fetch(`/api/owner/campaign/${id}`, {
          method: 'DELETE',
          headers: {
            'Content-Type': 'application/json',
            'Authorization': `Bearer ${token}`
          },
          body: JSON.stringify({ ownerId: userInfo.userId })
        });

        const data = await response.json();
        if (data.success) {
          alert('Campaign deleted successfully!');
          loadCampaigns();
        } else {
          alert(data.message);
        }
      } catch (error) {
        console.error('Error deleting campaign:', error);
        alert('Failed to delete campaign');
      }
    }

    loadCampaigns();
  </script>
</body>
</html>
