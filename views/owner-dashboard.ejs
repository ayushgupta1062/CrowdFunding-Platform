<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard - Crowdfunding Platform</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: #f8f9fa;
    }
    .dashboard-container {
      display: flex;
      min-height: 100vh;
    }
    .sidebar {
      width: 260px;
      background: linear-gradient(180deg, #f59e0b 0%, #d97706 100%);
      color: white;
      padding: 30px 0;
      position: fixed;
      height: 100vh;
      overflow-y: auto;
    }
    .sidebar-brand {
      padding: 0 25px 30px;
      border-bottom: 1px solid rgba(255,255,255,0.2);
      margin-bottom: 20px;
    }
    .sidebar-brand h4 {
      font-weight: 700;
      margin: 0;
    }
    .sidebar-menu {
      list-style: none;
      padding: 0;
    }
    .sidebar-menu li {
      margin: 5px 0;
    }
    .sidebar-menu a {
      display: flex;
      align-items: center;
      padding: 15px 25px;
      color: rgba(255,255,255,0.9);
      text-decoration: none;
      transition: all 0.3s;
    }
    .sidebar-menu a:hover, .sidebar-menu a.active {
      background: rgba(255,255,255,0.15);
      color: white;
    }
    .sidebar-menu i {
      width: 25px;
      margin-right: 12px;
      font-size: 18px;
    }
    .main-content {
      flex: 1;
      margin-left: 260px;
      padding: 30px;
    }
    .welcome-banner {
      background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
      color: white;
      padding: 30px;
      border-radius: 15px;
      margin-bottom: 30px;
      box-shadow: 0 4px 15px rgba(245, 158, 11, 0.2);
    }
    .welcome-banner h2 {
      font-size: 28px;
      font-weight: 700;
      margin-bottom: 5px;
    }
    .welcome-banner p {
      opacity: 0.95;
      margin: 0;
    }
    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 20px;
      margin-bottom: 30px;
    }
    .stat-card {
      background: white;
      padding: 25px;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.08);
      border-left: 4px solid #f59e0b;
      transition: all 0.3s;
    }
    .stat-card:hover {
      transform: translateY(-3px);
      box-shadow: 0 8px 20px rgba(0,0,0,0.12);
    }
    .stat-card h6 {
      color: #6b7280;
      font-size: 14px;
      margin-bottom: 10px;
      font-weight: 600;
      text-transform: uppercase;
    }
    .stat-card .stat-value {
      font-size: 32px;
      font-weight: 700;
      color: #1f2937;
    }
    .stat-card.green {
      border-left-color: #10b981;
    }
    .stat-card.blue {
      border-left-color: #3b82f6;
    }
    .section-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 20px;
    }
    .section-title {
      font-size: 22px;
      font-weight: 700;
      color: #1f2937;
      margin: 0;
    }
    .btn-create {
      background: #f59e0b;
      color: white;
      padding: 12px 30px;
      border: none;
      border-radius: 8px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      gap: 8px;
    }
    .btn-create:hover {
      background: #d97706;
      color: white;
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(245, 158, 11, 0.3);
    }
    .campaigns-table {
      background: white;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.08);
      overflow: hidden;
    }
    .table {
      margin: 0;
    }
    .table thead {
      background: #f8f9fa;
    }
    .table th {
      font-weight: 600;
      color: #4b5563;
      border-bottom: 2px solid #e5e7eb;
      padding: 15px;
    }
    .table td {
      padding: 15px;
      vertical-align: middle;
    }
    .status-badge {
      display: inline-block;
      padding: 5px 12px;
      border-radius: 20px;
      font-size: 12px;
      font-weight: 600;
    }
    .status-active {
      background: #d1fae5;
      color: #065f46;
    }
    .status-draft {
      background: #fef3c7;
      color: #92400e;
    }
    .status-closed {
      background: #fee2e2;
      color: #991b1b;
    }
    .action-btn {
      padding: 6px 12px;
      border: none;
      border-radius: 6px;
      font-size: 13px;
      cursor: pointer;
      transition: all 0.3s;
      margin: 0 3px;
    }
    .btn-view {
      background: #3b82f6;
      color: white;
    }
    .btn-view:hover {
      background: #2563eb;
    }
    .btn-edit {
      background: #10b981;
      color: white;
    }
    .btn-edit:hover {
      background: #059669;
    }
    .btn-delete {
      background: #ef4444;
      color: white;
    }
    .btn-delete:hover {
      background: #dc2626;
    }
    .empty-state {
      text-align: center;
      padding: 80px 20px;
      background: white;
      border-radius: 12px;
      color: #9ca3af;
    }
    .empty-state i {
      font-size: 80px;
      margin-bottom: 20px;
      opacity: 0.4;
    }
    .empty-state h4 {
      color: #4b5563;
      margin-bottom: 15px;
    }
    .empty-state p {
      font-size: 16px;
      margin-bottom: 25px;
    }
    @media (max-width: 768px) {
      .sidebar {
        width: 70px;
      }
      .sidebar-brand h4, .sidebar-menu span {
        display: none;
      }
      .main-content {
        margin-left: 70px;
      }
      .stats-grid {
        grid-template-columns: 1fr;
      }
      .section-header {
        flex-direction: column;
        gap: 15px;
        align-items: flex-start;
      }
    }
  </style>
</head>
<body>
  <div class="dashboard-container">
    <aside class="sidebar">
      <div class="sidebar-brand">
        <h4><i class="fas fa-rocket me-2"></i><span>CrowdFund</span></h4>
      </div>
      <ul class="sidebar-menu">
        <li><a href="/owner/dashboard" class="active"><i class="fas fa-th-large"></i><span>Dashboard</span></a></li>
        <li><a href="/owner/campaigns"><i class="fas fa-bullhorn"></i><span>My Campaigns</span></a></li>
        <li><a href="/owner/create-campaign"><i class="fas fa-plus-circle"></i><span>Create Campaign</span></a></li>
        <li><a href="/owner/messages"><i class="fas fa-comments"></i><span>Messages</span></a></li>
        <li><a href="/owner/analytics"><i class="fas fa-chart-line"></i><span>Analytics</span></a></li>
        <li><a href="/owner/profile"><i class="fas fa-user"></i><span>Profile</span></a></li>
        <li><a href="#" id="logoutBtn"><i class="fas fa-sign-out-alt"></i><span>Logout</span></a></li>
      </ul>
    </aside>

    <main class="main-content">
      <div class="welcome-banner">
        <h2>Welcome back, <span id="userName">Startup Owner</span> ðŸ‘‹</h2>
        <p>Manage your campaigns and grow your startup.</p>
      </div>

      <div class="stats-grid">
        <div class="stat-card">
          <h6>Active Campaigns</h6>
          <div class="stat-value" id="activeCampaigns">0</div>
        </div>
        <div class="stat-card green">
          <h6>Total Funding</h6>
          <div class="stat-value" id="totalFunding">$0</div>
        </div>
        <div class="stat-card blue">
          <h6>Total Backers</h6>
          <div class="stat-value" id="totalBackers">0</div>
        </div>
      </div>

      <div class="section-header">
        <h5 class="section-title">Your Campaigns</h5>
        <a href="/owner/create-campaign" class="btn-create">
          <i class="fas fa-plus"></i>Create Campaign
        </a>
      </div>

      <div id="campaignsContainer">
        <div class="empty-state">
          <i class="fas fa-spinner fa-spin"></i>
          <p>Loading campaigns...</p>
        </div>
      </div>
    </main>
  </div>

  <script>
    const token = localStorage.getItem('token');
    if (!token) {
      window.location.href = '/login';
    }

    function parseJwt(token) {
      try {
        return JSON.parse(atob(token.split('.')[1]));
      } catch (e) {
        return null;
      }
    }

    const userInfo = parseJwt(token);
    if (userInfo && userInfo.email) {
      document.getElementById('userName').textContent = userInfo.email.split('@')[0];
    }

    document.getElementById('logoutBtn').addEventListener('click', (e) => {
      e.preventDefault();
      localStorage.removeItem('token');
      localStorage.removeItem('user');
      window.location.href = '/login';
    });

    async function loadDashboard() {
      if (!userInfo || !userInfo.userId) return;

      try {
        // Load stats
        const statsResponse = await fetch(`/api/owner/stats/${userInfo.userId}`, {
          headers: { 'Authorization': `Bearer ${token}` }
        });
        const statsData = await statsResponse.json();

        if (statsData.success) {
          document.getElementById('activeCampaigns').textContent = statsData.stats.activeCampaigns;
          document.getElementById('totalFunding').textContent = '$' + statsData.stats.totalFunding.toLocaleString();
          document.getElementById('totalBackers').textContent = statsData.stats.totalBackers;
        }

        // Load campaigns
        const campaignsResponse = await fetch(`/api/owner/campaigns/${userInfo.userId}`, {
          headers: { 'Authorization': `Bearer ${token}` }
        });
        const campaignsData = await campaignsResponse.json();

        const container = document.getElementById('campaignsContainer');

        if (campaignsData.success && campaignsData.campaigns.length > 0) {
          const campaigns = campaignsData.campaigns.slice(0, 5); // Show first 5
          container.innerHTML = `
            <div class="campaigns-table">
              <table class="table">
                <thead>
                  <tr>
                    <th>Campaign Title</th>
                    <th>Status</th>
                    <th>Funding Goal</th>
                    <th>Raised Amount</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  ${campaigns.map(campaign => {
                    const progress = (campaign.currentFunding / campaign.fundingGoal) * 100;
                    const statusClass = campaign.status === 'active' ? 'status-active' : 
                                       campaign.status === 'draft' ? 'status-draft' : 'status-closed';
                    return `
                      <tr>
                        <td><strong>${campaign.projectName}</strong></td>
                        <td><span class="status-badge ${statusClass}">${campaign.status.toUpperCase()}</span></td>
                        <td>$${campaign.fundingGoal.toLocaleString()}</td>
                        <td>
                          <strong>$${campaign.currentFunding.toLocaleString()}</strong>
                          <small class="text-muted">(${Math.round(progress)}%)</small>
                        </td>
                        <td>
                          <button class="action-btn btn-view" onclick="viewCampaign('${campaign._id}')">
                            <i class="fas fa-eye"></i>
                          </button>
                          <button class="action-btn btn-edit" onclick="editCampaign('${campaign._id}')">
                            <i class="fas fa-edit"></i>
                          </button>
                          <button class="action-btn btn-delete" onclick="deleteCampaign('${campaign._id}')">
                            <i class="fas fa-trash"></i>
                          </button>
                        </td>
                      </tr>
                    `;
                  }).join('')}
                </tbody>
              </table>
            </div>
          `;
        } else {
          container.innerHTML = `
            <div class="empty-state">
              <i class="fas fa-bullhorn"></i>
              <h4>No campaigns yet</h4>
              <p>Create your first campaign to start raising funds for your startup.</p>
              <a href="/owner/create-campaign" class="btn-create">
                <i class="fas fa-plus me-2"></i>Create Your First Campaign
              </a>
            </div>
          `;
        }
      } catch (error) {
        console.error('Error loading dashboard:', error);
        document.getElementById('campaignsContainer').innerHTML = `
          <div class="empty-state">
            <i class="fas fa-exclamation-circle"></i>
            <h4>Error Loading Data</h4>
            <p>Failed to load dashboard. Please try again.</p>
          </div>
        `;
      }
    }

    function viewCampaign(id) {
      alert('Campaign details page coming soon! Campaign ID: ' + id);
    }

    function editCampaign(id) {
      alert('Edit campaign page coming soon! Campaign ID: ' + id);
    }

    async function deleteCampaign(id) {
      if (!confirm('Are you sure you want to delete this campaign?')) return;

      try {
        const response = await fetch(`/api/owner/campaign/${id}`, {
          method: 'DELETE',
          headers: {
            'Content-Type': 'application/json',
            'Authorization': `Bearer ${token}`
          },
          body: JSON.stringify({ ownerId: userInfo.userId })
        });

        const data = await response.json();
        if (data.success) {
          alert('Campaign deleted successfully!');
          loadDashboard();
        } else {
          alert(data.message);
        }
      } catch (error) {
        console.error('Error deleting campaign:', error);
        alert('Failed to delete campaign');
      }
    }

    loadDashboard();
  </script>
</body>
</html>
