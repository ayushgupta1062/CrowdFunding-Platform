<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Registration Successful - Crowdfunding Platform</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    body {
      background: linear-gradient(135deg, #10b981 0%, #059669 100%);
      min-height: 100vh;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    .card-custom {
      backdrop-filter: blur(10px);
      background: rgba(255, 255, 255, 0.98);
      border-radius: 20px;
      box-shadow: 0 20px 60px rgba(0,0,0,0.3);
    }
    .success-icon {
      width: 100px;
      height: 100px;
      border-radius: 50%;
      background: linear-gradient(135deg, #10b981 0%, #059669 100%);
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto 30px;
      animation: scaleIn 0.5s ease-out;
    }
    @keyframes scaleIn {
      from {
        transform: scale(0);
      }
      to {
        transform: scale(1);
      }
    }
    .btn-investor {
      background: linear-gradient(135deg, #10b981 0%, #059669 100%);
      border: none;
      transition: all 0.3s ease;
    }
    .btn-investor:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 20px rgba(16, 185, 129, 0.4);
    }
    .btn-owner {
      background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
      border: none;
      transition: all 0.3s ease;
    }
    .btn-owner:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 20px rgba(245, 158, 11, 0.4);
    }
  </style>
</head>
<body>
  <div class="container d-flex justify-content-center align-items-center min-vh-100 py-4">
    <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5">
      <div class="card card-custom border-0">
        <div class="card-body p-4 p-md-5 text-center">
          <div class="success-icon">
            <i class="fas fa-check fa-3x text-white"></i>
          </div>
          
          <h2 class="fw-bold mb-3">Registration Successful!</h2>
          <p class="text-muted mb-4">Your email has been verified successfully. You can now login to your account.</p>

          <div class="d-grid gap-3">
            <a href="/login" class="btn btn-investor btn-lg text-white fw-bold" id="investorLoginBtn" style="display: none;">
              <i class="fas fa-briefcase me-2"></i>Login as Investor
            </a>
            
            <a href="/login" class="btn btn-owner btn-lg text-white fw-bold" id="ownerLoginBtn" style="display: none;">
              <i class="fas fa-rocket me-2"></i>Login as Startup Owner
            </a>
          </div>

          <div class="mt-4">
            <p class="text-muted small mb-0">
              <i class="fas fa-info-circle me-1"></i>
              You will be redirected to login page in <span id="countdown">5</span> seconds
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    const userRole = localStorage.getItem('registeredRole');
    const investorBtn = document.getElementById('investorLoginBtn');
    const ownerBtn = document.getElementById('ownerLoginBtn');
    const countdownEl = document.getElementById('countdown');

    // Show appropriate login button based on role
    if (userRole === 'investor') {
      investorBtn.style.display = 'block';
    } else if (userRole === 'startup_owner') {
      ownerBtn.style.display = 'block';
    } else {
      // If no role found, show both buttons
      investorBtn.style.display = 'block';
      ownerBtn.style.display = 'block';
    }

    // Countdown timer
    let countdown = 5;
    const timer = setInterval(() => {
      countdown--;
      countdownEl.textContent = countdown;
      if (countdown <= 0) {
        clearInterval(timer);
        localStorage.removeItem('registeredRole');
        window.location.href = '/login';
      }
    }, 1000);

    // Clear registered role when clicking login button
    investorBtn.addEventListener('click', () => {
      localStorage.removeItem('registeredRole');
    });
    
    ownerBtn.addEventListener('click', () => {
      localStorage.removeItem('registeredRole');
    });
  </script>
</body>
</html>
