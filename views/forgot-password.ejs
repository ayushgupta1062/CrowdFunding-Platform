<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Reset Password - Crowdfunding Platform</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    body {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    .card-custom {
      backdrop-filter: blur(10px);
      background: rgba(255, 255, 255, 0.98);
      border-radius: 20px;
      box-shadow: 0 20px 60px rgba(0,0,0,0.3);
    }
    .btn-gradient {
      background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
      border: none;
      transition: all 0.3s ease;
    }
    .btn-gradient:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 20px rgba(239, 68, 68, 0.4);
    }
    .input-icon {
      position: relative;
    }
    .input-icon i {
      position: absolute;
      left: 15px;
      top: 50%;
      transform: translateY(-50%);
      color: #ef4444;
      z-index: 10;
    }
    .input-icon input {
      padding-left: 45px;
    }
    .form-control:focus {
      border-color: #ef4444;
      box-shadow: 0 0 0 0.2rem rgba(239, 68, 68, 0.25);
    }
  </style>
</head>
<body>
  <div class="container d-flex justify-content-center align-items-center min-vh-100 py-4">
    <div class="col-12 col-sm-10 col-md-8 col-lg-5 col-xl-4">
      <div class="card card-custom border-0">
        <div class="card-body p-4 p-md-5">
          <div class="text-center mb-4">
            <i class="fas fa-key fa-3x mb-3" style="color: #ef4444;"></i>
            <h2 class="fw-bold">Reset Your Password</h2>
            <p class="text-muted">We will send a verification code to your email</p>
          </div>

          <div id="message" class="alert d-none" role="alert"></div>

          <form id="forgotPasswordForm">
            <div class="mb-4 input-icon">
              <i class="fas fa-envelope"></i>
              <input type="email" class="form-control form-control-lg" id="email" placeholder="Enter your email address" required>
            </div>

            <button type="submit" class="btn btn-gradient btn-lg w-100 text-white fw-bold mb-3" id="submitBtn">
              <i class="fas fa-paper-plane me-2"></i>Send OTP
            </button>
          </form>

          <div class="text-center">
            <p class="mb-0">Remember your password? 
              <a href="/login" class="text-decoration-none fw-bold" style="color: #667eea;">Back to Login</a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    const form = document.getElementById('forgotPasswordForm');
    const submitBtn = document.getElementById('submitBtn');
    const messageDiv = document.getElementById('message');

    function showMessage(message, type) {
      messageDiv.textContent = message;
      messageDiv.className = `alert alert-${type}`;
      messageDiv.classList.remove('d-none');
      setTimeout(() => messageDiv.classList.add('d-none'), 5000);
    }

    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      const email = document.getElementById('email').value;
      const role = localStorage.getItem('forgotPasswordRole') || 'investor';

      submitBtn.disabled = true;
      submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Sending...';

      try {
        const response = await fetch('/api/auth/forgot-password', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ email, role })
        });

        const data = await response.json();
        if (data.success) {
          showMessage(data.message, 'success');
          localStorage.setItem('resetUserId', data.userId);
          localStorage.setItem('resetUserRole', data.role);
          setTimeout(() => window.location.href = '/verify-reset-otp', 1500);
        } else {
          showMessage(data.message, 'danger');
          submitBtn.disabled = false;
          submitBtn.innerHTML = '<i class="fas fa-paper-plane me-2"></i>Send OTP';
        }
      } catch (error) {
        showMessage('Network error. Please try again.', 'danger');
        submitBtn.disabled = false;
        submitBtn.innerHTML = '<i class="fas fa-paper-plane me-2"></i>Send OTP';
      }
    });
  </script>
</body>
</html>
