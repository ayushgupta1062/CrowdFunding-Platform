<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Verify OTP - Crowdfunding Platform</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    body {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
    }
    .card-custom {
      backdrop-filter: blur(10px);
      background: rgba(255, 255, 255, 0.98);
      border-radius: 20px;
      box-shadow: 0 20px 60px rgba(0,0,0,0.3);
    }
    .btn-gradient {
      background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
      border: none;
    }
    .btn-gradient:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 20px rgba(239, 68, 68, 0.4);
    }
    .otp-input {
      font-size: 2rem;
      letter-spacing: 1rem;
      text-align: center;
      border: 2px solid #ef4444;
    }
    .otp-input:focus {
      border-color: #dc2626;
      box-shadow: 0 0 0 0.2rem rgba(239, 68, 68, 0.25);
    }
  </style>
</head>
<body>
  <div class="container d-flex justify-content-center align-items-center min-vh-100 py-4">
    <div class="col-12 col-sm-10 col-md-8 col-lg-5 col-xl-4">
      <div class="card card-custom border-0">
        <div class="card-body p-4 p-md-5 text-center">
          <i class="fas fa-shield-alt fa-3x mb-3" style="color: #ef4444;"></i>
          <h2 class="fw-bold mb-2">Verify OTP</h2>
          <p class="text-muted mb-4">Enter the 6-digit OTP sent to your email to reset your password</p>

          <div id="message" class="alert d-none" role="alert"></div>

          <form id="otpForm">
            <input type="text" class="form-control form-control-lg otp-input mb-3" id="otp" maxlength="6" placeholder="000000" required pattern="[0-9]{6}">
            
            <button type="submit" class="btn btn-gradient btn-lg w-100 text-white fw-bold mb-3" id="verifyBtn">
              <i class="fas fa-check-circle me-2"></i>Verify OTP
            </button>
          </form>

          <button class="btn btn-outline-secondary w-100" id="resendBtn">
            <i class="fas fa-redo me-2"></i>Resend OTP
          </button>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    const userId = localStorage.getItem('resetUserId');
    const userRole = localStorage.getItem('resetUserRole');
    if (!userId || !userRole) window.location.href = '/forgot-password';

    const messageDiv = document.getElementById('message');
    function showMessage(message, type) {
      messageDiv.textContent = message;
      messageDiv.className = `alert alert-${type}`;
      messageDiv.classList.remove('d-none');
      setTimeout(() => messageDiv.classList.add('d-none'), 5000);
    }

    document.getElementById('otpForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      const otp = document.getElementById('otp').value;
      const verifyBtn = document.getElementById('verifyBtn');

      if (otp.length !== 6) {
        showMessage('Please enter a valid 6-digit OTP', 'danger');
        return;
      }

      verifyBtn.disabled = true;
      verifyBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Verifying...';

      try {
        const response = await fetch('/api/auth/verify-reset-otp', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ userId, otp, role: userRole })
        });

        const data = await response.json();
        if (data.success) {
          showMessage(data.message, 'success');
          setTimeout(() => window.location.href = '/reset-password', 1000);
        } else {
          showMessage(data.message, 'danger');
          verifyBtn.disabled = false;
          verifyBtn.innerHTML = '<i class="fas fa-check-circle me-2"></i>Verify OTP';
        }
      } catch (error) {
        showMessage('Network error. Please try again.', 'danger');
        verifyBtn.disabled = false;
        verifyBtn.innerHTML = '<i class="fas fa-check-circle me-2"></i>Verify OTP';
      }
    });

    document.getElementById('resendBtn').addEventListener('click', async () => {
      const resendBtn = document.getElementById('resendBtn');
      resendBtn.disabled = true;
      resendBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Sending...';

      try {
        const response = await fetch('/api/auth/forgot-password', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ userId })
        });

        const data = await response.json();
        if (data.success) {
          showMessage('OTP resent successfully', 'success');
        } else {
          showMessage(data.message, 'danger');
        }
      } catch (error) {
        showMessage('Network error', 'danger');
      } finally {
        resendBtn.disabled = false;
        resendBtn.innerHTML = '<i class="fas fa-redo me-2"></i>Resend OTP';
      }
    });

    document.getElementById('otp').addEventListener('input', (e) => {
      e.target.value = e.target.value.replace(/[^0-9]/g, '');
    });
  </script>
</body>
</html>
