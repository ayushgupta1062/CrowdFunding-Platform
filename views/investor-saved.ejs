<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Saved Projects - Crowdfunding Platform</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: #f8f9fa;
    }
    .dashboard-container {
      display: flex;
      min-height: 100vh;
    }
    .sidebar {
      width: 260px;
      background: linear-gradient(180deg, #10b981 0%, #059669 100%);
      color: white;
      padding: 30px 0;
      position: fixed;
      height: 100vh;
      overflow-y: auto;
    }
    .sidebar-brand {
      padding: 0 25px 30px;
      border-bottom: 1px solid rgba(255,255,255,0.2);
      margin-bottom: 20px;
    }
    .sidebar-brand h4 {
      font-weight: 700;
      margin: 0;
    }
    .sidebar-menu {
      list-style: none;
      padding: 0;
    }
    .sidebar-menu li {
      margin: 5px 0;
    }
    .sidebar-menu a {
      display: flex;
      align-items: center;
      padding: 15px 25px;
      color: rgba(255,255,255,0.9);
      text-decoration: none;
      transition: all 0.3s;
    }
    .sidebar-menu a:hover, .sidebar-menu a.active {
      background: rgba(255,255,255,0.15);
      color: white;
    }
    .sidebar-menu i {
      width: 25px;
      margin-right: 12px;
      font-size: 18px;
    }
    .main-content {
      flex: 1;
      margin-left: 260px;
      padding: 30px;
    }
    .page-header {
      margin-bottom: 30px;
    }
    .page-header h2 {
      font-size: 32px;
      font-weight: 700;
      color: #1f2937;
      margin-bottom: 10px;
    }
    .campaigns-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
      gap: 25px;
    }
    .campaign-card {
      background: white;
      border-radius: 12px;
      overflow: hidden;
      box-shadow: 0 2px 8px rgba(0,0,0,0.08);
      transition: all 0.3s;
      border: 1px solid #e5e7eb;
    }
    .campaign-card:hover {
      box-shadow: 0 8px 20px rgba(0,0,0,0.12);
      transform: translateY(-3px);
    }
    .campaign-image {
      width: 100%;
      height: 200px;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-size: 56px;
      position: relative;
    }
    .remove-btn {
      position: absolute;
      top: 15px;
      right: 15px;
      background: rgba(239, 68, 68, 0.95);
      border: none;
      width: 45px;
      height: 45px;
      border-radius: 50%;
      cursor: pointer;
      transition: all 0.3s;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 20px;
      color: white;
      box-shadow: 0 2px 8px rgba(0,0,0,0.15);
    }
    .remove-btn:hover {
      background: #dc2626;
      transform: scale(1.1);
    }
    .campaign-body {
      padding: 20px;
    }
    .campaign-header {
      margin-bottom: 12px;
    }
    .campaign-title {
      font-size: 20px;
      font-weight: 700;
      color: #1f2937;
      margin-bottom: 5px;
      line-height: 1.3;
    }
    .campaign-owner {
      font-size: 14px;
      color: #6b7280;
      display: flex;
      align-items: center;
      gap: 5px;
    }
    .campaign-category {
      display: inline-block;
      padding: 6px 14px;
      background: #e0f2fe;
      color: #0369a1;
      border-radius: 20px;
      font-size: 12px;
      font-weight: 600;
      margin-bottom: 12px;
    }
    .campaign-description {
      color: #4b5563;
      font-size: 14px;
      line-height: 1.6;
      margin-bottom: 15px;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }
    .funding-stats {
      margin-bottom: 15px;
    }
    .funding-amount {
      display: flex;
      justify-content: space-between;
      margin-bottom: 8px;
      font-size: 14px;
    }
    .funding-amount .raised {
      font-weight: 700;
      color: #10b981;
    }
    .funding-amount .goal {
      color: #6b7280;
    }
    .progress {
      height: 8px;
      border-radius: 10px;
      background: #e5e7eb;
    }
    .progress-bar {
      background: linear-gradient(90deg, #10b981 0%, #059669 100%);
      border-radius: 10px;
    }
    .campaign-footer {
      padding-top: 15px;
      border-top: 1px solid #e5e7eb;
    }
    .btn-view {
      width: 100%;
      padding: 12px;
      background: #10b981;
      color: white;
      border: none;
      border-radius: 8px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s;
    }
    .btn-view:hover {
      background: #059669;
    }
    .empty-state {
      text-align: center;
      padding: 100px 20px;
      background: white;
      border-radius: 12px;
      color: #9ca3af;
    }
    .empty-state i {
      font-size: 100px;
      margin-bottom: 30px;
      opacity: 0.4;
    }
    .empty-state h4 {
      color: #4b5563;
      margin-bottom: 15px;
    }
    .empty-state p {
      font-size: 16px;
      margin-bottom: 25px;
    }
    .btn-explore {
      display: inline-block;
      padding: 12px 30px;
      background: #10b981;
      color: white;
      text-decoration: none;
      border-radius: 8px;
      font-weight: 600;
      transition: all 0.3s;
    }
    .btn-explore:hover {
      background: #059669;
      color: white;
    }
    @media (max-width: 768px) {
      .sidebar {
        width: 70px;
      }
      .sidebar-brand h4, .sidebar-menu span {
        display: none;
      }
      .main-content {
        margin-left: 70px;
      }
      .campaigns-grid {
        grid-template-columns: 1fr;
      }
    }
  </style>
</head>
<body>
  <div class="dashboard-container">
    <!-- Sidebar -->
    <aside class="sidebar">
      <div class="sidebar-brand">
        <h4><i class="fas fa-hand-holding-heart me-2"></i><span>CrowdFund</span></h4>
      </div>
      <ul class="sidebar-menu">
        <li><a href="/investor/dashboard"><i class="fas fa-th-large"></i><span>Dashboard</span></a></li>
        <li><a href="/investor/explore"><i class="fas fa-compass"></i><span>Explore Campaigns</span></a></li>
        <li><a href="/investor/saved" class="active"><i class="fas fa-bookmark"></i><span>Saved Projects</span></a></li>
        <li><a href="/investor/messages"><i class="fas fa-comments"></i><span>Messages</span></a></li>
        <li><a href="/investor/profile"><i class="fas fa-user"></i><span>Profile</span></a></li>
        <li><a href="#" id="logoutBtn"><i class="fas fa-sign-out-alt"></i><span>Logout</span></a></li>
      </ul>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
      <div class="page-header">
        <h2><i class="fas fa-bookmark me-2"></i>Saved Projects</h2>
        <p style="color: #6b7280;">Your bookmarked campaigns for future reference</p>
      </div>

      <!-- Campaigns Grid -->
      <div class="campaigns-grid" id="campaignsContainer">
        <div class="empty-state">
          <i class="fas fa-spinner fa-spin"></i>
          <p>Loading saved campaigns...</p>
        </div>
      </div>
    </main>
  </div>

  <script>
    const token = localStorage.getItem('token');
    if (!token) {
      window.location.href = '/login';
    }

    function parseJwt(token) {
      try {
        return JSON.parse(atob(token.split('.')[1]));
      } catch (e) {
        return null;
      }
    }

    const userInfo = parseJwt(token);

    document.getElementById('logoutBtn').addEventListener('click', (e) => {
      e.preventDefault();
      localStorage.removeItem('token');
      localStorage.removeItem('user');
      window.location.href = '/login';
    });

    function getCategoryIcon(category) {
      const icons = {
        'Technology': 'fa-laptop-code',
        'Education': 'fa-graduation-cap',
        'Finance': 'fa-chart-line',
        'Healthcare': 'fa-heartbeat',
        'E-commerce': 'fa-shopping-cart',
        'Other': 'fa-lightbulb'
      };
      return icons[category] || 'fa-lightbulb';
    }

    async function loadSavedCampaigns() {
      const container = document.getElementById('campaignsContainer');
      
      if (!userInfo || !userInfo.userId) {
        container.innerHTML = `
          <div class="empty-state">
            <i class="fas fa-exclamation-circle"></i>
            <h4>Session Expired</h4>
            <p>Please login again to view your saved campaigns</p>
            <a href="/login" class="btn-explore">Go to Login</a>
          </div>
        `;
        return;
      }

      container.innerHTML = '<div class="empty-state"><i class="fas fa-spinner fa-spin"></i><p>Loading saved campaigns...</p></div>';

      try {
        const response = await fetch(`/api/investor/saved-campaigns/${userInfo.userId}`, {
          headers: { 'Authorization': `Bearer ${token}` }
        });
        const data = await response.json();

        if (data.success && data.campaigns.length > 0) {
          container.innerHTML = data.campaigns.map(campaign => {
            const progress = (campaign.currentFunding / campaign.fundingGoal) * 100;
            const icon = getCategoryIcon(campaign.category);
            return `
              <div class="campaign-card">
                <div class="campaign-image">
                  <i class="fas ${icon}"></i>
                  <button class="remove-btn" onclick="removeSaved('${campaign._id}', this)" title="Remove from saved">
                    <i class="fas fa-times"></i>
                  </button>
                </div>
                <div class="campaign-body">
                  <div class="campaign-header">
                    <div class="campaign-title">${campaign.projectName}</div>
                    <div class="campaign-owner">
                      <i class="fas fa-user-circle"></i>
                      ${campaign.ownerName}
                    </div>
                  </div>
                  <span class="campaign-category">${campaign.category}</span>
                  <p class="campaign-description">${campaign.description}</p>
                  <div class="funding-stats">
                    <div class="funding-amount">
                      <span class="raised">$${campaign.currentFunding.toLocaleString()}</span>
                      <span class="goal">of $${campaign.fundingGoal.toLocaleString()}</span>
                    </div>
                    <div class="progress">
                      <div class="progress-bar" style="width: ${Math.min(progress, 100)}%"></div>
                    </div>
                  </div>
                  <div class="campaign-footer">
                    <button class="btn-view" onclick="viewCampaign('${campaign._id}')">
                      <i class="fas fa-eye me-2"></i>View Details
                    </button>
                  </div>
                </div>
              </div>
            `;
          }).join('');
        } else {
          container.innerHTML = `
            <div class="empty-state">
              <i class="fas fa-bookmark"></i>
              <h4>No Saved Campaigns Yet</h4>
              <p>You haven't saved any campaigns yet. Start exploring and bookmark campaigns you're interested in!</p>
              <a href="/investor/explore" class="btn-explore">
                <i class="fas fa-compass me-2"></i>Explore Campaigns
              </a>
            </div>
          `;
        }
      } catch (error) {
        console.error('Error loading saved campaigns:', error);
        container.innerHTML = `
          <div class="empty-state">
            <i class="fas fa-exclamation-circle"></i>
            <h4>Error Loading Campaigns</h4>
            <p>Failed to load your saved campaigns. Please try again.</p>
            <button class="btn-explore" onclick="loadSavedCampaigns()">
              <i class="fas fa-redo me-2"></i>Retry
            </button>
          </div>
        `;
      }
    }

    async function removeSaved(campaignId, button) {
      if (!confirm('Remove this campaign from saved?')) return;

      try {
        const response = await fetch('/api/investor/unsave-campaign', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'Authorization': `Bearer ${token}`
          },
          body: JSON.stringify({
            investorId: userInfo.userId,
            campaignId
          })
        });

        const data = await response.json();
        if (data.success) {
          // Remove the card with animation
          const card = button.closest('.campaign-card');
          card.style.opacity = '0';
          card.style.transform = 'scale(0.9)';
          setTimeout(() => {
            loadSavedCampaigns();
          }, 300);
        }
      } catch (error) {
        console.error('Error removing saved campaign:', error);
        alert('Failed to remove campaign. Please try again.');
      }
    }

    function viewCampaign(id) {
      alert('Campaign details page coming soon! Campaign ID: ' + id);
    }

    // Load saved campaigns
    loadSavedCampaigns();
  </script>
</body>
</html>
