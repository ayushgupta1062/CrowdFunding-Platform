<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Register - Crowdfunding Platform</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    body {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    .card-custom {
      backdrop-filter: blur(10px);
      background: rgba(255, 255, 255, 0.98);
      border-radius: 20px;
      box-shadow: 0 20px 60px rgba(0,0,0,0.3);
    }
    .role-card {
      border: 3px solid #e5e7eb;
      border-radius: 12px;
      padding: 20px;
      cursor: pointer;
      transition: all 0.3s ease;
      background: white;
    }
    .role-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 25px rgba(0,0,0,0.1);
    }
    .role-card.active {
      border-color: #667eea;
      background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
    }
    .role-card.investor.active {
      border-color: #10b981;
      background: linear-gradient(135deg, rgba(16, 185, 129, 0.1) 0%, rgba(5, 150, 105, 0.1) 100%);
    }
    .role-card.startup.active {
      border-color: #f59e0b;
      background: linear-gradient(135deg, rgba(245, 158, 11, 0.1) 0%, rgba(217, 119, 6, 0.1) 100%);
    }
    .btn-gradient {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      border: none;
      transition: all 0.3s ease;
    }
    .btn-gradient:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 20px rgba(102, 126, 234, 0.4);
    }
    .form-control:focus {
      border-color: #667eea;
      box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
    }
    .input-icon {
      position: relative;
    }
    .input-icon i {
      position: absolute;
      left: 15px;
      top: 50%;
      transform: translateY(-50%);
      color: #667eea;
      z-index: 10;
    }
    .input-icon input, .input-icon select, .input-icon textarea {
      padding-left: 45px;
    }
    .role-specific {
      display: none;
    }
    .role-specific.active {
      display: block;
    }
  </style>
</head>
<body>
  <div class="container py-4">
    <div class="row justify-content-center">
      <div class="col-12 col-lg-10 col-xl-9">
        <div class="card card-custom border-0">
          <div class="card-body p-4 p-md-5">
            <div class="text-center mb-4">
              <i class="fas fa-hand-holding-heart fa-3x mb-3" style="color: #667eea;"></i>
              <h2 class="fw-bold">Join Our Platform</h2>
              <p class="text-muted">Create your account and start your journey</p>
            </div>

            <div id="message" class="alert d-none" role="alert"></div>

            <form id="registerForm">
              <!-- Role Selection -->
              <div class="mb-4">
                <h5 class="mb-3 text-center">Choose Your Role</h5>
                <div class="row g-3">
                  <div class="col-md-6">
                    <div class="role-card investor" data-role="investor">
                      <div class="text-center">
                        <i class="fas fa-briefcase fa-3x mb-2" style="color: #10b981;"></i>
                        <h5 class="fw-bold">Investor</h5>
                        <p class="small text-muted mb-0">Discover and fund innovative startups</p>
                      </div>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="role-card startup" data-role="startup_owner">
                      <div class="text-center">
                        <i class="fas fa-rocket fa-3x mb-2" style="color: #f59e0b;"></i>
                        <h5 class="fw-bold">Startup Owner</h5>
                        <p class="small text-muted mb-0">Launch your campaign and raise funds</p>
                      </div>
                    </div>
                  </div>
                </div>
                <input type="hidden" id="role" name="role" required>
              </div>

              <!-- Common Fields -->
              <div class="row">
                <div class="col-md-6 mb-3">
                  <div class="input-icon">
                    <i class="fas fa-user"></i>
                    <input type="text" class="form-control" id="fullName" placeholder="Full Name *" required>
                  </div>
                </div>
                <div class="col-md-6 mb-3">
                  <div class="input-icon">
                    <i class="fas fa-phone"></i>
                    <input type="tel" class="form-control" id="phone" placeholder="Phone Number *" required>
                  </div>
                </div>
              </div>

              <div class="mb-3 input-icon">
                <i class="fas fa-envelope"></i>
                <input type="email" class="form-control" id="email" placeholder="Email Address *" required>
              </div>

              <div class="row">
                <div class="col-md-6 mb-3">
                  <div class="input-icon">
                    <i class="fas fa-lock"></i>
                    <input type="password" class="form-control" id="password" placeholder="Password *" required minlength="6">
                  </div>
                </div>
                <div class="col-md-6 mb-3">
                  <div class="input-icon">
                    <i class="fas fa-lock"></i>
                    <input type="password" class="form-control" id="confirmPassword" placeholder="Confirm Password *" required minlength="6">
                  </div>
                </div>
              </div>

              <!-- Investor Specific Fields -->
              <div id="investorFields" class="role-specific">
                <h6 class="mt-4 mb-3 fw-bold" style="color: #10b981;">
                  <i class="fas fa-briefcase me-2"></i>Investor Details
                </h6>
                <div class="mb-3 input-icon">
                  <i class="fas fa-dollar-sign"></i>
                  <input type="text" class="form-control" id="investmentBudget" placeholder="Investment Budget (optional)">
                </div>
                <div class="mb-3">
                  <label class="form-label small">Preferred Investment Categories</label>
                  <div class="row g-2">
                    <div class="col-6 col-md-4">
                      <div class="form-check">
                        <input class="form-check-input category-check" type="checkbox" value="Technology" id="cat1">
                        <label class="form-check-label small" for="cat1">Technology</label>
                      </div>
                    </div>
                    <div class="col-6 col-md-4">
                      <div class="form-check">
                        <input class="form-check-input category-check" type="checkbox" value="Education" id="cat2">
                        <label class="form-check-label small" for="cat2">Education</label>
                      </div>
                    </div>
                    <div class="col-6 col-md-4">
                      <div class="form-check">
                        <input class="form-check-input category-check" type="checkbox" value="Healthcare" id="cat3">
                        <label class="form-check-label small" for="cat3">Healthcare</label>
                      </div>
                    </div>
                    <div class="col-6 col-md-4">
                      <div class="form-check">
                        <input class="form-check-input category-check" type="checkbox" value="Finance" id="cat4">
                        <label class="form-check-label small" for="cat4">Finance</label>
                      </div>
                    </div>
                    <div class="col-6 col-md-4">
                      <div class="form-check">
                        <input class="form-check-input category-check" type="checkbox" value="E-commerce" id="cat5">
                        <label class="form-check-label small" for="cat5">E-commerce</label>
                      </div>
                    </div>
                    <div class="col-6 col-md-4">
                      <div class="form-check">
                        <input class="form-check-input category-check" type="checkbox" value="Other" id="cat6">
                        <label class="form-check-label small" for="cat6">Other</label>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="mb-3">
                  <textarea class="form-control" id="investorBio" rows="3" placeholder="Short Bio (optional)" style="padding-left: 15px;"></textarea>
                </div>
              </div>

              <!-- Startup Owner Specific Fields -->
              <div id="startupFields" class="role-specific">
                <h6 class="mt-4 mb-3 fw-bold" style="color: #f59e0b;">
                  <i class="fas fa-rocket me-2"></i>Startup Details
                </h6>
                <div class="mb-3 input-icon">
                  <i class="fas fa-building"></i>
                  <input type="text" class="form-control" id="startupName" placeholder="Startup/Project Name *">
                </div>
                <div class="row">
                  <div class="col-md-6 mb-3">
                    <div class="input-icon">
                      <i class="fas fa-tag"></i>
                      <select class="form-control" id="projectCategory">
                        <option value="">Select Category *</option>
                        <option value="Technology">Technology</option>
                        <option value="Education">Education</option>
                        <option value="Healthcare">Healthcare</option>
                        <option value="Finance">Finance</option>
                        <option value="E-commerce">E-commerce</option>
                        <option value="Other">Other</option>
                      </select>
                    </div>
                  </div>
                  <div class="col-md-6 mb-3">
                    <div class="input-icon">
                      <i class="fas fa-chart-line"></i>
                      <select class="form-control" id="projectStage">
                        <option value="">Project Stage *</option>
                        <option value="idea">Idea</option>
                        <option value="prototype">Prototype</option>
                        <option value="mvp">MVP</option>
                        <option value="launched">Launched</option>
                      </select>
                    </div>
                  </div>
                </div>
                <div class="mb-3 input-icon">
                  <i class="fas fa-users"></i>
                  <input type="number" class="form-control" id="teamSize" placeholder="Team Size *" min="1">
                </div>
                <div class="mb-3 input-icon">
                  <i class="fas fa-link"></i>
                  <input type="url" class="form-control" id="websiteLink" placeholder="Website/GitHub/Portfolio Link (optional)">
                </div>
                <div class="mb-3">
                  <textarea class="form-control" id="startupDescription" rows="3" placeholder="Short Startup Description *" style="padding-left: 15px;"></textarea>
                </div>
              </div>

              <button type="submit" class="btn btn-gradient btn-lg w-100 text-white fw-bold mt-3" id="submitBtn">
                <i class="fas fa-paper-plane me-2"></i>Get OTP
              </button>
            </form>

            <div class="text-center mt-4">
              <p class="mb-0">Already have an account? 
                <a href="/login" class="text-decoration-none fw-bold" style="color: #667eea;">Login</a>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    const roleCards = document.querySelectorAll('.role-card');
    const roleInput = document.getElementById('role');
    const investorFields = document.getElementById('investorFields');
    const startupFields = document.getElementById('startupFields');
    const form = document.getElementById('registerForm');
    const submitBtn = document.getElementById('submitBtn');
    const messageDiv = document.getElementById('message');

    roleCards.forEach(card => {
      card.addEventListener('click', () => {
        roleCards.forEach(c => c.classList.remove('active'));
        card.classList.add('active');
        const role = card.dataset.role;
        roleInput.value = role;
        
        investorFields.classList.remove('active');
        startupFields.classList.remove('active');
        
        if (role === 'investor') {
          investorFields.classList.add('active');
        } else if (role === 'startup_owner') {
          startupFields.classList.add('active');
        }
      });
    });

    function showMessage(message, type) {
      messageDiv.textContent = message;
      messageDiv.className = `alert alert-${type}`;
      messageDiv.classList.remove('d-none');
      setTimeout(() => messageDiv.classList.add('d-none'), 5000);
    }

    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      if (!roleInput.value) {
        showMessage('Please select your role', 'warning');
        return;
      }

      const password = document.getElementById('password').value;
      const confirmPassword = document.getElementById('confirmPassword').value;

      if (password !== confirmPassword) {
        showMessage('Passwords do not match', 'danger');
        return;
      }

      const formData = {
        fullName: document.getElementById('fullName').value,
        email: document.getElementById('email').value,
        password: password,
        phone: document.getElementById('phone').value,
        role: roleInput.value
      };

      if (roleInput.value === 'investor') {
        const categories = Array.from(document.querySelectorAll('.category-check:checked')).map(cb => cb.value);
        formData.investmentBudget = document.getElementById('investmentBudget').value;
        formData.preferredCategories = categories;
        formData.investorBio = document.getElementById('investorBio').value;
      } else if (roleInput.value === 'startup_owner') {
        formData.startupName = document.getElementById('startupName').value;
        formData.projectCategory = document.getElementById('projectCategory').value;
        formData.projectStage = document.getElementById('projectStage').value;
        formData.teamSize = parseInt(document.getElementById('teamSize').value) || 0;
        formData.websiteLink = document.getElementById('websiteLink').value;
        formData.startupDescription = document.getElementById('startupDescription').value;

        if (!formData.startupName || !formData.projectCategory || !formData.projectStage || !formData.startupDescription) {
          showMessage('Please fill all required startup fields', 'warning');
          return;
        }
      }

      submitBtn.disabled = true;
      submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Sending OTP...';

      try {
        const response = await fetch('/api/auth/register', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(formData)
        });

        const data = await response.json();

        if (data.success) {
          showMessage(data.message, 'success');
          localStorage.setItem('userId', data.userId);
          localStorage.setItem('userRole', data.role);
          setTimeout(() => window.location.href = '/verify-otp', 1500);
        } else {
          showMessage(data.message, 'danger');
          submitBtn.disabled = false;
          submitBtn.innerHTML = '<i class="fas fa-paper-plane me-2"></i>Get OTP';
        }
      } catch (error) {
        showMessage('Network error. Please try again.', 'danger');
        submitBtn.disabled = false;
        submitBtn.innerHTML = '<i class="fas fa-paper-plane me-2"></i>Get OTP';
      }
    });
  </script>
</body>
</html>
