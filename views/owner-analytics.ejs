<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Analytics - Crowdfunding Platform</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: #f8f9fa;
    }
    .dashboard-container {
      display: flex;
      min-height: 100vh;
    }
    .sidebar {
      width: 260px;
      background: linear-gradient(180deg, #f59e0b 0%, #d97706 100%);
      color: white;
      padding: 30px 0;
      position: fixed;
      height: 100vh;
      overflow-y: auto;
    }
    .sidebar-brand {
      padding: 0 25px 30px;
      border-bottom: 1px solid rgba(255,255,255,0.2);
      margin-bottom: 20px;
    }
    .sidebar-brand h4 {
      font-weight: 700;
      margin: 0;
    }
    .sidebar-menu {
      list-style: none;
      padding: 0;
    }
    .sidebar-menu li {
      margin: 5px 0;
    }
    .sidebar-menu a {
      display: flex;
      align-items: center;
      padding: 15px 25px;
      color: rgba(255,255,255,0.9);
      text-decoration: none;
      transition: all 0.3s;
    }
    .sidebar-menu a:hover, .sidebar-menu a.active {
      background: rgba(255,255,255,0.15);
      color: white;
    }
    .sidebar-menu i {
      width: 25px;
      margin-right: 12px;
      font-size: 18px;
    }
    .main-content {
      flex: 1;
      margin-left: 260px;
      padding: 30px;
    }
    .page-header {
      margin-bottom: 30px;
    }
    .page-header h2 {
      font-size: 32px;
      font-weight: 700;
      color: #1f2937;
      margin-bottom: 10px;
    }
    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 20px;
      margin-bottom: 30px;
    }
    .stat-card {
      background: white;
      padding: 25px;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.08);
      border-left: 4px solid #f59e0b;
      transition: all 0.3s;
    }
    .stat-card:hover {
      transform: translateY(-3px);
      box-shadow: 0 8px 20px rgba(0,0,0,0.12);
    }
    .stat-card h6 {
      color: #6b7280;
      font-size: 14px;
      margin-bottom: 10px;
      font-weight: 600;
      text-transform: uppercase;
    }
    .stat-card .stat-value {
      font-size: 32px;
      font-weight: 700;
      color: #1f2937;
    }
    .stat-card.green {
      border-left-color: #10b981;
    }
    .stat-card.blue {
      border-left-color: #3b82f6;
    }
    .stat-card.purple {
      border-left-color: #8b5cf6;
    }
    .chart-section {
      background: white;
      padding: 30px;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.08);
      margin-bottom: 25px;
    }
    .chart-title {
      font-size: 20px;
      font-weight: 700;
      color: #1f2937;
      margin-bottom: 20px;
    }
    .chart-placeholder {
      height: 300px;
      background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
      border-radius: 8px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: #6b7280;
      font-size: 18px;
      border: 2px dashed #d1d5db;
    }
    .performance-table {
      background: white;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.08);
      overflow: hidden;
    }
    .table {
      margin: 0;
    }
    .table thead {
      background: #f8f9fa;
    }
    .table th {
      font-weight: 600;
      color: #4b5563;
      border-bottom: 2px solid #e5e7eb;
      padding: 15px;
    }
    .table td {
      padding: 15px;
      vertical-align: middle;
    }
    @media (max-width: 768px) {
      .sidebar {
        width: 70px;
      }
      .sidebar-brand h4, .sidebar-menu span {
        display: none;
      }
      .main-content {
        margin-left: 70px;
      }
      .stats-grid {
        grid-template-columns: 1fr;
      }
    }
  </style>
</head>
<body>
  <div class="dashboard-container">
    <aside class="sidebar">
      <div class="sidebar-brand">
        <h4><i class="fas fa-rocket me-2"></i><span>CrowdFund</span></h4>
      </div>
      <ul class="sidebar-menu">
        <li><a href="/owner/dashboard"><i class="fas fa-th-large"></i><span>Dashboard</span></a></li>
        <li><a href="/owner/campaigns"><i class="fas fa-bullhorn"></i><span>My Campaigns</span></a></li>
        <li><a href="/owner/create-campaign"><i class="fas fa-plus-circle"></i><span>Create Campaign</span></a></li>
        <li><a href="/owner/messages"><i class="fas fa-comments"></i><span>Messages</span></a></li>
        <li><a href="/owner/analytics" class="active"><i class="fas fa-chart-line"></i><span>Analytics</span></a></li>
        <li><a href="/owner/profile"><i class="fas fa-user"></i><span>Profile</span></a></li>
        <li><a href="#" id="logoutBtn"><i class="fas fa-sign-out-alt"></i><span>Logout</span></a></li>
      </ul>
    </aside>

    <main class="main-content">
      <div class="page-header">
        <h2><i class="fas fa-chart-line me-2"></i>Analytics</h2>
        <p style="color: #6b7280;">Track your campaign performance and insights</p>
      </div>

      <div class="stats-grid">
        <div class="stat-card">
          <h6>Total Views</h6>
          <div class="stat-value" id="totalViews">0</div>
        </div>
        <div class="stat-card green">
          <h6>Total Backers</h6>
          <div class="stat-value" id="totalBackers">0</div>
        </div>
        <div class="stat-card blue">
          <h6>Total Funding</h6>
          <div class="stat-value" id="totalFunding">$0</div>
        </div>
        <div class="stat-card purple">
          <h6>Saved by Investors</h6>
          <div class="stat-value" id="savedCount">0</div>
        </div>
      </div>

      <div class="chart-section">
        <h5 class="chart-title">Funding Over Time</h5>
        <div class="chart-placeholder">
          <i class="fas fa-chart-area me-2"></i>
          Chart Coming Soon
        </div>
      </div>

      <div class="chart-section">
        <h5 class="chart-title">Campaign Performance Overview</h5>
        <div class="performance-table">
          <table class="table">
            <thead>
              <tr>
                <th>Campaign</th>
                <th>Views</th>
                <th>Backers</th>
                <th>Funding</th>
                <th>Progress</th>
              </tr>
            </thead>
            <tbody id="performanceTable">
              <tr>
                <td colspan="5" style="text-align: center; padding: 40px; color: #9ca3af;">
                  <i class="fas fa-spinner fa-spin me-2"></i>Loading data...
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </main>
  </div>

  <script>
    const token = localStorage.getItem('token');
    if (!token) {
      window.location.href = '/login';
    }

    function parseJwt(token) {
      try {
        return JSON.parse(atob(token.split('.')[1]));
      } catch (e) {
        return null;
      }
    }

    const userInfo = parseJwt(token);

    document.getElementById('logoutBtn').addEventListener('click', (e) => {
      e.preventDefault();
      localStorage.removeItem('token');
      localStorage.removeItem('user');
      window.location.href = '/login';
    });

    async function loadAnalytics() {
      if (!userInfo || !userInfo.userId) return;

      try {
        // Load stats
        const statsResponse = await fetch(`/api/owner/stats/${userInfo.userId}`, {
          headers: { 'Authorization': `Bearer ${token}` }
        });
        const statsData = await statsResponse.json();

        if (statsData.success) {
          document.getElementById('totalViews').textContent = '0'; // Placeholder
          document.getElementById('totalBackers').textContent = statsData.stats.totalBackers;
          document.getElementById('totalFunding').textContent = '$' + statsData.stats.totalFunding.toLocaleString();
          document.getElementById('savedCount').textContent = '0'; // Placeholder
        }

        // Load campaigns for performance table
        const campaignsResponse = await fetch(`/api/owner/campaigns/${userInfo.userId}`, {
          headers: { 'Authorization': `Bearer ${token}` }
        });
        const campaignsData = await campaignsResponse.json();

        const tbody = document.getElementById('performanceTable');

        if (campaignsData.success && campaignsData.campaigns.length > 0) {
          tbody.innerHTML = campaignsData.campaigns.map(campaign => {
            const progress = (campaign.currentFunding / campaign.fundingGoal) * 100;
            return `
              <tr>
                <td><strong>${campaign.projectName}</strong></td>
                <td>0</td>
                <td>0</td>
                <td>$${campaign.currentFunding.toLocaleString()}</td>
                <td>
                  <div style="display: flex; align-items: center; gap: 10px;">
                    <div style="flex: 1; height: 8px; background: #e5e7eb; border-radius: 10px; overflow: hidden;">
                      <div style="width: ${Math.min(progress, 100)}%; height: 100%; background: linear-gradient(90deg, #f59e0b 0%, #d97706 100%);"></div>
                    </div>
                    <span style="font-weight: 600; color: #f59e0b;">${Math.round(progress)}%</span>
                  </div>
                </td>
              </tr>
            `;
          }).join('');
        } else {
          tbody.innerHTML = `
            <tr>
              <td colspan="5" style="text-align: center; padding: 40px; color: #9ca3af;">
                No campaigns found
              </td>
            </tr>
          `;
        }
      } catch (error) {
        console.error('Error loading analytics:', error);
      }
    }

    loadAnalytics();
  </script>
</body>
</html>
